<Window x:Class="Agenda_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
        <Menu>
            <MenuItem Header="Clients">
                <Hyperlink Name="AddClient" Click="AddClient_Click">
                    Ajouter un client
                </Hyperlink>
                    <Hyperlink Name="customerList" Click="customerList_Click">
                        Customers List
                    </Hyperlink>
                    <Hyperlink Name="brokerList" Click="brokerList_Click">
                        Brokers List
                    </Hyperlink>
                </MenuItem>
        </Menu>
    </DockPanel>
    <StackPanel>
        <Frame Name="MainFrame" 
                   NavigationUIVisibility="Hidden">
        </Frame>
    </StackPanel>
    </Grid>
</Window>
